<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:svg="using:Avalonia.Svg.Skia"
             x:Class="T.Views.Dialogs.AboutDialog">

    <ScrollViewer>
        <StackPanel Spacing="16" Margin="8">
            <!-- Header mit Logo -->
            <StackPanel HorizontalAlignment="Center" Spacing="12">
                <svg:Svg Path="/Assets/logo.svg" Width="80" Height="80"/>
                <TextBlock Text="T - SSH Terminal Client"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Version 1.0.0"
                           FontSize="14"
                           Opacity="0.7"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Description -->
            <TextBlock Text="A modern, cross-platform SSH terminal client built with Avalonia UI."
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Opacity="0.8"
                       Margin="20,0"/>

            <Separator/>

            <!-- License -->
            <StackPanel Spacing="8">
                <TextBlock Text="License" FontWeight="SemiBold" FontSize="16"/>
                <TextBlock TextWrapping="Wrap" Opacity="0.8">
                    This project is licensed under the GNU General Public License v3.0.
                    You are free to use, modify and distribute this software under the terms of the GPL.
                </TextBlock>
                <Button Content="View Full License"
                        HorizontalAlignment="Left"
                        Click="OnViewLicenseClick"/>
            </StackPanel>

            <Separator/>

            <!-- Third-Party Libraries -->
            <StackPanel Spacing="8">
                <TextBlock Text="Third-Party Libraries" FontWeight="SemiBold" FontSize="16"/>
                <TextBlock Text="This project uses the following open-source libraries:"
                           Opacity="0.8"
                           Margin="0,0,0,8"/>
                
                <Border BorderBrush="{DynamicResource DividerStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12">
                    <StackPanel Spacing="12">
                        <!-- Avalonia -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Avalonia UI Framework" FontWeight="SemiBold"/>
                            <TextBlock Text="License: MIT" FontSize="12" Opacity="0.7"/>
                            <TextBlock Text="© The Avalonia Project" FontSize="12" Opacity="0.7"/>
                        </StackPanel>

                        <Separator/>

                        <!-- FluentAvalonia -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="FluentAvalonia UI" FontWeight="SemiBold"/>
                            <TextBlock Text="License: MIT" FontSize="12" Opacity="0.7"/>
                            <TextBlock Text="© amwx" FontSize="12" Opacity="0.7"/>
                        </StackPanel>

                        <Separator/>

                        <!-- SSH.NET -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="SSH.NET" FontWeight="SemiBold"/>
                            <TextBlock Text="License: MIT" FontSize="12" Opacity="0.7"/>
                            <TextBlock Text="© Renci" FontSize="12" Opacity="0.7"/>
                        </StackPanel>

                        <Separator/>

                        <!-- Polly -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Polly" FontWeight="SemiBold"/>
                            <TextBlock Text="License: BSD-3-Clause" FontSize="12" Opacity="0.7"/>
                            <TextBlock Text="© App vNext" FontSize="12" Opacity="0.7"/>
                        </StackPanel>

                        <Separator/>

                        <!-- CommunityToolkit -->
                        <StackPanel Spacing="4">
                            <TextBlock Text=".NET Community Toolkit (MVVM)" FontWeight="SemiBold"/>
                            <TextBlock Text="License: MIT" FontSize="12" Opacity="0.7"/>
                            <TextBlock Text="© .NET Foundation" FontSize="12" Opacity="0.7"/>
                        </StackPanel>

                        <Separator/>

                        <!-- Microsoft.Data.Sqlite -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Microsoft.Data.Sqlite" FontWeight="SemiBold"/>
                            <TextBlock Text="License: MIT" FontSize="12" Opacity="0.7"/>
                            <TextBlock Text="© Microsoft Corporation" FontSize="12" Opacity="0.7"/>
                        </StackPanel>

                        <Separator/>

                        <!-- AvaloniaEdit -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="AvaloniaEdit" FontWeight="SemiBold"/>
                            <TextBlock Text="License: MIT" FontSize="12" Opacity="0.7"/>
                            <TextBlock Text="© The AvaloniaEdit contributors" FontSize="12" Opacity="0.7"/>
                        </StackPanel>

                        <Separator/>

                        <!-- Svg.Controls.Skia -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Svg.Controls.Skia" FontWeight="SemiBold"/>
                            <TextBlock Text="License: MIT" FontSize="12" Opacity="0.7"/>
                            <TextBlock Text="© wieslawsoltes" FontSize="12" Opacity="0.7"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <TextBlock Text="All third-party licenses are compatible with the GNU GPLv3 license of this project."
                           FontSize="12"
                           Opacity="0.6"
                           TextWrapping="Wrap"
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <Separator/>

            <!-- Copyright -->
            <TextBlock Text="© 2026 Yannick Dreher (yannick.dreher@dremaxx.de). Licensed under GPLv3."
                       HorizontalAlignment="Center"
                       FontSize="12"
                       Opacity="0.6"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>