<wnd:AppWindow xmlns="https://github.com/avaloniaui"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:wnd="using:FluentAvalonia.UI.Windowing"
               xmlns:dialogs="using:T.UI.Views.Dialogs"
               x:Class="T.UI.Views.SettingsWindow"
               Title="Settings"
               Width="600"
               MinWidth="600"
               Height="560"
               WindowStartupLocation="CenterOwner">

    <Grid RowDefinitions="*,Auto" RowSpacing="8" Margin="8">
        <dialogs:SettingsDialog Grid.Row="0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="Save" Classes="accent" Click="OnSaveClick" MinWidth="120"/>
            <Button Content="Cancel" Click="OnCancelClick" MinWidth="120"/>
        </StackPanel>
    </Grid>
</wnd:AppWindow>