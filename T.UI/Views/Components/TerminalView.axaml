<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:T.UI.ViewModels"
             xmlns:controls="using:T.UI.Controls"
             xmlns:components="using:T.UI.Views.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="T.UI.Views.Components.TerminalView"
             x:DataType="vm:SessionViewModel"
             Focusable="False">

    <Design.DataContext>
        <vm:SessionViewModel/>
    </Design.DataContext>

    <Grid>
        <controls:TerminalControl x:Name="Terminal"/>
        <components:TerminalStatsOverlay x:Name="Stats"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         MinWidth="128"
                                         Margin="8" />
    </Grid>
</UserControl>